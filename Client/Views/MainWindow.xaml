<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Closed="MainWindow_OnClosed"
        ResizeMode="NoResize"
        Title="Test Tcp Client" Height="241" Width="304">
    <Grid>
        <TextBox x:Name="USerNameTb" HorizontalAlignment="Left" Height="23" Margin="23,18,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="Connect" Click="connect_OnClick" HorizontalAlignment="Left" Margin="204,18,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="Disconnect" Click="disconnect_OnClick" HorizontalAlignment="Left" Margin="204,50,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBox x:Name="DataFromServerTb" IsEnabled="False" Margin="0,86,20,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="100" HorizontalAlignment="Right" Width="256"/>
    </Grid>
</Window>
